{
  "name": "JIRA Ticket Opener",
  "version": "1.0",
  "description": "Open JIRA tickets from text",
  "manifest_version": 2,
  "permissions": ["storage", "contextMenus"],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
